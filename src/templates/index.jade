extends _layout/layout

block variables
  - var title = 'K-Gulp Tasks'
  - var bodyclass = 'index'

block css
  link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')

block body 
  .container 
    .row 
      .col-sm-12
        h1.display-4(style="margin:20px 0") K-Gulp Tasks

        p This is a Tool for WebApp Front-End with All-in-One Gulp task 
        h4 Github
        p 
          a(href="https://github.com/baonguyenyam/k-gulp-task") https://github.com/baonguyenyam/k-gulp-task
        hr



        h5 Template 

        pre.prettyprint.lang-html.
          * Jade Template
          * Nunjucks Template

        h5 Scripts 

        pre.prettyprint.lang-html.
          * Babel
          * Typescript
          * Coffee 

        h5 Styles

        pre.prettyprint.lang-html.
          * SASS/SCSS
          * LESS
          * Stylus
          * CSS

        h5 Image Tools
        pre.prettyprint.lang-html.
