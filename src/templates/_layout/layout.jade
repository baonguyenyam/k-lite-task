include ../_include/_variables
doctype html
html(dir='ltr', lang='en', ng-app="App", ng-controller="MainController", ng-cloak)
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
		meta(name='format-detection', content='telephone=no')
		meta(name='msapplication-tap-highlight', content='no')
		base(href="/")
		title(ng-bind="MainTitle + ' - ' + RootTitle")
		if process.argv.slice(3) == '--production'
			include ../_include/_seo
		include ../_include/_css
		block css
	body(class="page-{{RootClass}}", layout="row", ng-cloak)
		block body
		include ../_include/_script
		block js
