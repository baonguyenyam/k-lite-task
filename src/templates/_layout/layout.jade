html(dir='ltr', lang='en', itemscope, itemtype="http://schema.org/WebSite", prefix="og: http://ogp.me/ns#", class="no-js")
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
		meta(name='format-detection', content='telephone=no')
		meta(name='msapplication-tap-highlight', content='no')
		meta(name='theme-color', content='#000000')
		meta(name='msapplication-navbutton-color', content='#000000')
		meta(name='apple-mobile-web-app-status-bar-style', content='#000000')
		meta(name='apple-mobile-web-app-status-bar-style', content='#000000')
		title #{title || AppName}
		if process.argv.slice(3) == '--production'
			include ../_include/_seo
		include ../_include/_css
		block css
	body(class="#{prefix}#{bodyclass || 'default'}")
		block body
		include ../_include/_script
		block js
