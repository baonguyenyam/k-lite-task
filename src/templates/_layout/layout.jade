include ../_include/_variables
doctype html

<!--[if lt IE 9]>
<html class='lt-ie9 no-js' lang='#{config.SEO.seo_lang}'>
<![endif]-->
<!--[if gte IE 9]><!-->
<html class='no-js' lang="#{config.SEO.seo_lang}">
<!--<![endif]-->

html(dir='ltr', lang='#{config.SEO.seo_lang}', itemscope, itemtype="http://schema.org/WebSite", prefix="og: http://ogp.me/ns#", class="no-js")
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
		meta(name='format-detection', content='telephone=no')
		meta(name='msapplication-tap-highlight', content='no')
		<!-- ////////////// Mobile title color ////////////// -->
		meta(name='theme-color', content='#{config.SEO.mobile_color}')
		meta(name='msapplication-navbutton-color', content='#{config.SEO.mobile_color}')
		meta(name='apple-mobile-web-app-status-bar-style', content='#{config.SEO.mobile_color}')
		title #{title || AppName} - #{config.SEO.cfg_name}
		if process.argv.slice(3) == '--production'
		include ../_include/_seo
		block og
		<!-- ////////////// CSS Include ////////////// -->
		include ../_include/_css
		block css
	body#top-page(class="#{prefix}#{bodyclass || 'default'}")
		<!-- ////////////// Header ////////////// -->
		//- include header
		include header-offcanvas
		<!-- ////////////// End Header ////////////// -->
		<!-- ////////////// Begin Main ////////////// -->
		main
			block body
		<!-- ////////////// End Main ////////////// -->
		<!-- ////////////// Footer ////////////// -->
		include footer
		<!-- ////////////// End Footer ////////////// -->
		<!-- ////////////// Back to Top ////////////// -->
		a(href="#top-page", id="back-to-top", title="Back to top")
			span TOP
			i.fa.fa-angle-up
		<!-- ////////////// Javascript Include ////////////// -->
		include ../_include/_script
		block js

