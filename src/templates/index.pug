extends _layout/layout

block variables
	- var title = 'Home'
	- var description = 'Description for home page'
	- var bodyclass = 'home'
	- var selected = 'Home';
	- var href = '';

block css
	if process.argv.slice(3) == '--production'
		link(rel='stylesheet', href='/css/pages/'+bodyclass+'.min.css')
	else
		link(rel='stylesheet', href='/css/pages/'+bodyclass+'.css')

block og
	meta(property="og:image", content='//'+config.SEO.cfg_url+'/home/demo.jpg')

block body
	section.home
		.container
			.row
				.col.p-4
					h1 Hello World!
					hr
					h5 Todo list
					ul.list-unstyled
						li - Xem lại k-sass-core box-shawdown
						li - Lang
						li - class của bootstrap như margin pđing
						li - anchorlink
						li - babel js
